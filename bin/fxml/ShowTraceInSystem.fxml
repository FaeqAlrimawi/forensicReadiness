<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.instantiation.analysis.TraceViewerInSystemController">
   <center>
      <ScrollPane fx:id="scrollPaneTraceViewer" fitToHeight="true" fitToWidth="true" prefHeight="550.0" prefWidth="1100.0">
         <content>
            <StackPane fx:id="mainStackPane" minHeight="-Infinity" minWidth="-Infinity" prefHeight="525.0" prefWidth="1060.0" style="-fx-background-color: white;" />
         </content>
      </ScrollPane>
   </center>
   <top>
      <VBox fx:id="vBoxCommands" spacing="5.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="32.0" prefWidth="950.0" spacing="5.0" style="-fx-background-color: white;">
               <children>
                  <Button fx:id="btnLoadTransitionSystem" mnemonicParsing="false" onAction="#loadTransitionSystem" text="Load transition System" />
                  <ProgressIndicator fx:id="progressIndicator" prefHeight="6.0" prefWidth="41.0" visible="false" />
                  <Button mnemonicParsing="false" onAction="#showStatesPercentages" text="Occurrences %" />
                  <Button fx:id="btnClear" mnemonicParsing="false" onAction="#reset" text="reset" />
                  <Button fx:id="btnSaveTrace" mnemonicParsing="false" onAction="#saveTrace" text="save" />
               </children>
               <padding>
                  <Insets left="5.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="54.0" prefWidth="1105.0" spacing="5.0" style="-fx-background-color: white;">
               <children>
                  <HBox fx:id="hboxShowEntities" alignment="CENTER" prefHeight="54.0" prefWidth="185.0" spacing="3.0">
                     <children>
                        <Button fx:id="btnShowEntities" mnemonicParsing="false" onAction="#showEntities" text="show top entities" />
                        <Spinner fx:id="spinnerTopK" editable="true" prefHeight="25.0" prefWidth="64.0" />
                     </children>
                  </HBox>
                  <ScrollPane fx:id="scrollPaneEntities" prefHeight="54.0" prefWidth="913.0" vbarPolicy="NEVER">
                     <content>
                        <HBox fx:id="hboxEntities" prefHeight="45.0" spacing="10.0">
                           <padding>
                              <Insets left="5.0" top="5.0" />
                           </padding>
                        </HBox>
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <bottom>
      <HBox alignment="CENTER" prefHeight="25.0" prefWidth="1061.0" spacing="3.0" style="-fx-background-color: white;" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#showPreviousTrace" text="&lt;">
               <tooltip>
                  <Tooltip text="Previous Trace" />
               </tooltip>
            </Button>
            <TextField fx:id="txtFieldCurrentShownTrace" alignment="CENTER" prefHeight="25.0" prefWidth="56.0" />
            <Label fx:id="lblNumberOfShownTraces" />
            <Button mnemonicParsing="false" onAction="#showNextTrace" text="&gt;">
               <tooltip>
                  <Tooltip text="Next Trace" />
               </tooltip>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
